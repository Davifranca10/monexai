generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model category {
  id        String          @id @default(cuid())
  name      String
  mode      UserMode
  type      TransactionType @default(EXPENSE)
  isSystem  Boolean         @default(true)
  userId    String?
  createdAt DateTime        @default(now())

  recurring_rule recurring_rule[]
  template       template[]
  transaction    transaction[]
}

model ChatMessage {
  id        String   @id @default(cuid())
  userId    String
  role      String
  content   String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("chat_message")
}


model ChatUsage {
  id            String   @id @default(cuid())
  userId        String
  date          DateTime @default(now()) @db.Date
  questionCount Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
  @@map("chat_usage")
}


model hidden_template {
  id         String   @id
  userId     String
  templateId String
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, templateId])
}

model recurring_rule {
  id                String          @id @default(cuid())
  userId            String
  type              RecurrenceType
  categoryId        String
  description       String
  amountCents       Int
  transactionType   TransactionType
  dayOfMonth        Int?
  dayOfWeek         Int?
  totalInstallments Int?
  paidInstallments  Int?            @default(0)
  startDate         DateTime
  endDate           DateTime?
  isActive          Boolean         @default(true)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  category      category        @relation(fields: [categoryId], references: [id])
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  recurring_run recurring_run[]
  transaction   transaction[]

  @@index([userId, isActive])
}

model recurring_run {
  id              String   @id    @default(cuid())
  recurringRuleId String
  executionDate   DateTime
  transactionId   String?
  createdAt       DateTime @default(now())

  recurring_rule recurring_rule @relation(fields: [recurringRuleId], references: [id], onDelete: Cascade)

  @@unique([recurringRuleId, executionDate])
  @@map("recurring_run")
}

model subscription {
  id                   String             @id @default(cuid())
  userId               String             @unique
  status               SubscriptionStatus @default(FREEMIUM)
  stripeCustomerId     String?            @unique
  stripeSubscriptionId String?            @unique
  stripePriceId        String?
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model template {
  id          String          @id @default(cuid())
  name        String
  description String?
  type        TransactionType
  categoryId  String
  mode        UserMode
  isSystem    Boolean         @default(true)
  userId      String?
  amountCents Int?
  createdAt   DateTime        @default(now())

  category category @relation(fields: [categoryId], references: [id])
  user     User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model transaction {
  id              String          @id @default(cuid())
  userId          String
  type            TransactionType
  categoryId      String
  description     String
  amountCents     Int
  date            DateTime
  interestPercent Float?          @default(0)
  installments    Int?            @default(1)
  recurringRuleId String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  category       category        @relation(fields: [categoryId], references: [id])
  recurring_rule recurring_rule? @relation(fields: [recurringRuleId], references: [id])
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}

model UserProfile {
  id         String   @id @default(cuid())
  userId     String   @unique
  mode       UserMode
  avatarPath String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("user_profile")
}


model User {
  id           String   @id
  email        String   @unique
  name         String?
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  chatMessage     ChatMessage[]     
  chatUsage       ChatUsage[]       
  hiddenTemplate  hidden_template[]
  recurringRule   recurring_rule[]
  subscription    subscription?
  template        template[]
  transaction     transaction[]
  userProfile     UserProfile?      
  spamBlock       UserSpamBlock?

  @@map("users")
}

model UserSpamBlock {
  id           String   @id @default(cuid())
  userId       String   @unique
  blockedUntil DateTime
  reason       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("user_spam_blocks")
}

enum RecurrenceType {
  MONTHLY
  WEEKLY
  INSTALLMENT
}

enum SubscriptionStatus {
  FREEMIUM
  ACTIVE
  CANCELED
  PAST_DUE
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum UserMode {
  PERSONAL
  BUSINESS
}
